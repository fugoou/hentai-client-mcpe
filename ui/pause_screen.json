{
  "namespace": "pause",

  "achievements_icon": {
    "type": "image",
    "texture": "textures/ui/achievements",
    "layer": 3,
    "size": [ 16, 16 ]
  },

  "feedback_icon": {
    "type": "image",
    "texture": "textures/ui/Feedback",
    "layer": 3,
    "size": [ 16, 16 ]
  },

  "Xbox_icon": {
    "type": "image",
    "texture": "textures/ui/xbox4",
    "layer": 3,
    "size": [ 27, 27 ]
  },

  "change_skin_icon": {
    "type": "image",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "texture": "textures/ui/hangar",
    "layer": 3,
    "size": [ 32, 16 ]
  },

  "new_offers_icon@common_store.new_offer_icon": {
    "layer": 11, // This is the lowest layer where the button border won't show through this icon while being pressed
    "anchor_from": "top_right",
    "anchor_to": "top_right"
  },

  "update_prompt_icon": {
    "type": "image",
    "texture": "textures/ui/update",
    "layer": 12, // This is the lowest layer where the button border won't show through this icon while being pressed
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "size": [ 11, 21 ]
  },

  "marketplace_error_icon@common_store.marketplace_error_icon": {
    "layer": 12,
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "sale_ribbon_icon": {
    "type": "image",
    "texture": "textures/ui/saleribbon",
    "layer": 12 // This is the lowest layer where the button border won't show through this icon while being pressed
  },

  "copyright": {
    "type": "label",
    "color": "$main_header_text_color",
    "layer": 2,
    "text": "menu.copyright",
    "size": [ "default", 10 ],
    "max_size": [ "100%", "100%" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "development_version": {
    "type": "label",
    "color": "$main_header_text_color",
    "layer": 2,
    "text": "#development_version",
    "size": [ "default", 10 ],
    "max_size": [ "100%", "100%" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "bindings": [
      {
        "binding_name": "#development_version"
      }
    ]
  },

  "name": {
    "type": "label",
    "color": "$main_header_text_color",
    "layer": 2,
    "text": "#worldname",
    "size": [ "default", 10 ],
    "max_size": [ "100%", "100%" ],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "bindings": [
      {
        "binding_name": "#worldname"
      }
    ]
  },

  "text_panel": {
    "type": "panel",
    "size": [ "100%-2px", 10 ],
    "offset": [ 0, 1 ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "copyright@pause.copyright": {}
      },
      {
        "development_version@pause.development_version": {
          "ignored": "$is_publish"
        }
      },
      {
        "name@pause.name": {}
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Skins Panel
  //---------------------------------------------------------------------------

  "change_skin_button@pause.main_button": {
    "$pressed_button_name": "button.menu_skins",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "$button_content_offset": [ 1, 2 ],
    "$button_content": "pause.change_skin_icon",
    "$pressed_alpha": 0.65,
    "$focus_id": "menu_skins_button",
    "$button_tts_header": "accessibility.pause.skinPicker",
    "tts_index_order": 4
  },
  "profile_button_custom@pause.main_button": {
    "size": [ "100%", "100% - 4px" ],
    "offset": [ 0, -2 ],
    "$pressed_button_name": "button.to_profile_or_skins_screen",
    "$button_text": "profileScreen.header",
    "$focus_id": "profile_button"
  },

  "skin_viewer_panel": {
    "type": "input_panel",
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "size": [ "100%", "100px" ],
    "$skin_viewer_panel_offset|default": [ 0, 16 ],
    "offset": "$skin_viewer_panel_offset",
    "gesture_tracking_button": "button.turn_doll",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.turn_doll",
        "mapping_type": "pressed",
        "button_up_right_of_first_refusal": true
      }
    ],
    "controls": [
      {
        "paper_doll_panel": {
          "type": "panel",
          "size": [ "100%", "100% - 10px" ],
          "$paper_doll_offset|default": [ 0, -10 ],
          "offset": "$paper_doll_offset",

          "controls": [
            {
              "paper_doll": {
                "type": "custom",
                "renderer": "paper_doll_renderer",
                "camera_tilt_degrees": -10,
                "starting_rotation": 30,
                "layer": 2,
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "rotation": "gesture_x",
                "size": [ "100%", "100%" ],
                "use_selected_skin": false,
                "animation_reset_name": "screen_animation_reset",
                "anims": [
                  "@common.screen_exit_size_animation_push",
                  "@common.screen_exit_size_animation_pop",
                  "@common.screen_entrance_size_animation_push",
                  "@common.screen_entrance_size_animation_pop"
                ],
                "bindings": [
                  {
                    "binding_name": "#paper_doll_skin"
                  },
                  {
                    "binding_type": "view",
                    "source_control_name": "viewer_panel",
                    "source_property_name": "#gesture_delta_source",
                    "target_property_name": "#gesture_delta_source"
                  },
                  {
                    "binding_type": "view",
                    "source_control_name": "viewer_panel",
                    "source_property_name": "#gesture_mouse_delta_x",
                    "target_property_name": "#gesture_mouse_delta_x"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "paper_doll_name_tag": {
          "ignored": "($pocket_edition and $pocket_screen)",
          "type": "custom",
          "renderer": "name_tag_renderer",
          "layer": 2,
          "anchor_from": "top_middle",
          "anchor_to": "bottom_middle",
          "size": [ 8, 8 ],
          "bindings": [
            {
              "binding_name": "#playername"
            },
            {
              "binding_name": "#playername_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "skin_panel": {
    "type": "panel",
    "size": [ "50%", "100%" ],
    "max_size": [ 100, "100%" ],
    "controls": [
      {
        "title_panel@common_art.title_panel_content": {
        "size": [ "100%", "100%" ],
        "$splash_text_visible": false,
        "anchor_from": "top_middle",
        "anchor_to": "top_middle"
        }
      },
      {
        "interior@pause.skin_panel_interior": {}
      }
    ]
  },

  "skin_panel_interior": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "orientation": "vertical",
    "controls": [
      {
        "offset_panel": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "controls": [
            {
              "viewer_panel@pause.skin_viewer_panel": {
                "tts_ignore_count": true
              }
            }
          ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Online Buttons Panel (and the lang button)
  //---------------------------------------------------------------------------

  "edu_feedback_button@common_buttons.light_content_button": {
    "size": [ 24, 24 ],
    "$button_content": "pause.feedback_icon",
    "$pressed_button_name": "button.edu_feedback"
  },

  "release_feedback_button@common_buttons.hyperlink_content_button": {
    "size": [ 24, 24 ],
    "property_bag": {
      "#hyperlink": "https://aka.ms/minecraftfb"
    },
    "$button_content": "pause.feedback_icon"
  },

  "pre_release_feedback_button@pause.release_feedback_button": {
    "property_bag": {
      "#hyperlink": "https://aka.ms/minecraftfbbeta"
    }
  },

  "feedback_button": {
    "ignored": "$feedback_ignored",
    "type": "panel",
    "$button_tts_header": "accessibility.pause.feedback",
    "controls": [
      { "edu_feedback_button@pause.edu_feedback_button": { "ignored": "$edu_feedback_ignored" } },
      { "release_feedback_button@pause.release_feedback_button": { "ignored": "($pre_release or $education_edition)" } },
      { "pre_release_feedback_button@pause.pre_release_feedback_button": { "ignored": "(not $pre_release or $education_edition)" } }
    ]
  },

  "achievements_button_custom@pause.main_button": {
    "size": [ "100%", "100% - 4px"],
    "offset": [ 0, -2 ],
    "$button_text": "menu.achievements",
    "$pressed_button_name": "button.menu_achievements"
  },

  "achievements_icon_button": {
    "ignored": "$achievements_ignored",
    "type": "panel",
    "$button_tts_header": "menu.achievements",
    "controls": [
      { "achievements_button@pause.achievements_button": { "ignored": "$education_edition" } }
    ]
  },

  // Button will resize itself to length of the text
  "xbl_signin_button@common_buttons.light_text_form_fitting_button": {
    "size": [ "100%c", 25 ],
    "$pressed_button_name": "button.signin",
    "$button_state_panel": "common_buttons.new_ui_width_fitting_button_panel",
    "$button_text_size": [ "default", 10 ],
    "$button_text_max_size": [ 80, 10 ], // longest localized string length will fit in this
    "$button_text": "xbox.signin",
    "$focus_id": "menu_xbox_signin_button",
    "tts_index_order": 10,
    "anchor_from": "left_middle",
    "anchor_to": "left_middle"
  },

  "platform_signin_button@common_buttons.light_text_button": {
    "$pressed_button_name": "button.signin",
    "$button_text_max_size": [ "100%", 26 ],
    "$focus_id": "menu_xbox_signin_button",
    "$button_text": "#platform_signin_text",
    "$button_text_binding_type": "global",
    "tts_index_order": 10,
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "bindings": [
      {
        "binding_name": "#platform_signin_text"
      }
    ]
  },

  "column_frame": {
    "type": "panel"
  },

  "educator_resources_button@pause.main_button": {
    "$pressed_button_name": "button.edu_resources",
    "$button_text": "menu.educatorResources"
  },

  "upper_online_buttons_panel": {
    "type": "stack_panel",
    "anchor_to": "bottom_left",
    "anchor_from": "bottom_left",
    "size": [ "50% - 75px", "100%c" ],
    "offset": [ 0, "-23%" ],
    "controls": [
      {
        "stacked_column": {
          "type": "stack_panel",
          "size": [ "100%", 32 ],
          "offset": [ "5%", 0 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "orientation": "horizontal",
          "controls": [
            {
              "xbl_btn_padding": {
                "ignored": "($nx_os or $is_ps4)",
                "type": "panel",
                "size": [ 5, 0 ],
                "bindings": [
                  {
                    "binding_name": "#sign_in_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "xbl_btn@pause.column_frame": {
                "ignored": "($nx_os or $is_ps4)",
                "size": [ 94, 32 ],
                "max_size": [ "95%", 32 ],
                "controls": [
                  { "xbl_signin_button@pause.xbl_signin_button": {} }
                ],
                "bindings": [
                  {
                    "binding_name": "#sign_in_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "platform_signin_btn@pause.column_frame": {
                "ignored": "(not $nx_os and not $is_ps4)",
                "size": [ "90% - 6px", 32 ],
                "controls": [
                  {
                    "platform_signin_button@pause.platform_signin_button": {}
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#sign_in_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "gamertag_pic_and_label": {
                "ignored": "(not $nx_os and not $is_ps4)",
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": [ "100%c", 16 ],
                "controls": [
                  {
                    "gamerpic_with_border": {
                      "type": "panel",
                      "size": [ "100%c", "100%" ],
                      "controls": [
                        {
                          "gamerpic": {
                            "type": "image",
                            "size": [ 16, 16 ],
                            "layer": 1,
                            "bindings": [
                              {
                                "binding_name": "#gamerpic_texture_path",
                                "binding_name_override": "#texture"
                              },
                              {
                                "binding_name": "#gamerpic_texture_location_type",
                                "binding_name_override": "#texture_file_system"
                              }
                            ]
                          }
                        },
                        {
                          "border_white@common.focus_border_white": {
                            "layer": 3,
                            "size": [ 16, 16 ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "spacer": {
                      "type": "panel",
                      "size": [ 1, 0 ]
                    }
                  },
                  {
                    "label_panel": {
                      "type": "panel",
                      "size": [ "100%c", "100%" ],
                      "controls": [
                        {
                          "gamertag_label": {
                            "type": "label",
                            "color": "$main_header_text_color",
                            "layer": 1,
                            "text": "#gamertag_label",
                            "locked_alpha": 0.5,
                            "size": [ "default", "100%" ],
                            "offset": [ 0, "25%" ],
                            "bindings": [
                              {
                                "binding_name": "#gamertag_label"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#gamertag_pic_and_label_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#online_buttons_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "icon_panel": {
    "type": "stack_panel",
    "anchor_to": "bottom_left",
    "anchor_from": "bottom_left",
    "size": [ "50% - 75px", "100%c" ],
    "offset": [ 0, "-15%" ],
    "controls": [
      {
        "stacked_column": {
          "type": "stack_panel",
          "size": [ "100%", 32 ],
          "offset": [ "5%", 0 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "orientation": "horizontal",
          "controls": [
            {
              "side_padding": {
                "type": "panel",
                "size": [ "12%", 0 ]
              }
            },
            {
              "feedback_icon_btn@pause.column_frame": {
                "ignored": "$education_edition",
                "size": [ 28, 32 ],
                "controls": [
                  { "feedback_icon_button@pause.feedback_icon_button": {} }
                ]
              }
            },
            {
              "feedback_padding": {
                "type": "panel",
                "size": [ "2%", 0 ]
              }
            },
            {
              "take_screenshot_btn@pause.column_frame": {
                "ignored": "(not $is_holographic)",
                "size": [ 28, 32 ],
                "controls": [
                  { "take_screenshot_button@pause.take_screenshot_button": {} }
                ],
                "bindings": [
                  {
                    "binding_name": "#show_clubs",
                    "binding_name_override": "#visible",
                    "binding_type": "global"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Main Buttons Panel
  //---------------------------------------------------------------------------

  "main_button@common_buttons.light_text_button": {
    "size": [ "100% - 2px", "100% - 2px" ]
  },

  "main_content_button@common_buttons.light_content_button": {
    "size": [ "100% - 2px", "100% - 2px" ]
  },

  "return_to_game_button@pause.main_button": {
    "$pressed_button_name": "button.menu_continue",
    "$button_text": "pauseScreen.back",
    "tts_index_order": 1
  },
  
  "how_to_play_button@pause.main_button": {
    "$pressed_button_name": "button.menu_how_to_play",
    "$button_text": "menu.howToPlay",
    "$button_text_binding_type": "none",
    "$button_binding_condition": "none",
    "$button_text_grid_collection_name": "",
    "tts_inherit_siblings": true,
    "$focus_override_right": "profile_button"
  },
  "quit_button@pause.main_button": {
    "$pressed_button_name": "button.menu_quit",
    "$button_text": "pauseScreen.quit"
  },
  "settings_button@pause.main_button": {
    "$pressed_button_name": "button.menu_settings",
    "$button_text": "menu.settings"
  },

  "store_button@common_buttons.light_content_button": {
    "size": [ "100% - 2px", "100% - 2px" ],
    "$pressed_button_name": "button.menu_store",
    "$button_text": "menu.store",
    "$button_content": "pause.store_button_content",
    "$button_text_binding_type": "none",
    "$button_binding_condition": "none",
    "$button_text_grid_collection_name": "",
    "tts_inherit_siblings": true,
    "$focus_override_right": "profile_button"
  },

  "error_store_button@common_buttons.light_content_button": {
    "size": [ "100% - 2px", "100% - 2px" ],
    "$pressed_button_name": "button.menu_store",
    "$button_text": "menu.store",
    "$button_content": "pause.store_button_content",
    "$button_text_binding_type": "none",
    "$button_binding_condition": "none",
    "$button_text_grid_collection_name": "",
    "tts_inherit_siblings": true
  },

  "store_button_sale_banner@pause.sale_ribbon_icon": {
    "size": [ "100%c", 16 ], // For some reason doing 100%c + X doesn't work on an image?
    "controls": [
      {
        "banner_label_padding": {
          "type": "panel",
          "size": [ "100%c + 12px", "100%" ],
          "controls": [
            {
              "banner_label": {
                "type": "label",
                "size": [ "default", 10 ],
                "offset": [ -1, -1 ],
                "text": "store.pauseMenu.sale",
                "color": "$title_text_color",
                "layer": 1,
                "tts_name": "accessibility.store.tag",
                "tts_control_type_order_priority": 1004, // To be read after the button control type
                "tts_value_order_priority": 1003
              }
            }
          ]
        }
      }
    ]
  },

  "store_button_content": {
    "type": "panel",
    "controls": [
      {
        "button_label@common_buttons.new_ui_binding_button_label": {
          "layer": 5
        }
      },
      {
        "sales_banner@pause.store_button_sale_banner": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ -6, -8 ],
          "bindings": [
            {
              "binding_name": "#sale_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "store_error_image": {
    "type": "image",
    "texture": "textures/ui/ErrorGlyph",
    "size": [ 15, 15 ]
  },

  "store_error_content": {
    "type": "image",
    "texture": "textures/ui/disabledButton",
    "layer": 9,
    "controls": [
      {
        "marketplace_button_label": {
          "type": "label",
          "text": "menu.store",
          "layer": 1,
          "color": "$light_button_locked_text_color"
        }
      }
    ]
  },

  "store_sale_label": {
    "type": "label",
    "size": [ "default", 10 ],
    "offset": [ 4, 0 ],
    "text": "store.pauseMenu.sale",
    "color": "$light_button_default_text_color",
    "layer": 2
  },

  "store_button_stack@pause.stacked_row": {
    "controls": [
      {
        "store_button@pause.store_button": {
          "enabled": "(not $store_disabled)",
          "bindings": [
            {
              "binding_name": "(not #has_marketplace_errors)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "update_icon@pause.update_prompt_icon": {
          "ignored": "$store_disabled",
          "size": [ "52.38%y", 15 ],
          "offset": [ -16, -6 ],
          "bindings": [
            {
              "binding_name": "#update_icon_visible",
              "binding_name_override": "#visible",
              "binding_condition": "always"
            }
          ]
        }
      },
      {
        "new_offers_icon@pause.new_offers_icon": {
          "ignored": "$store_disabled",
          "offset": [ 8, -6 ],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "bindings": [
            {
              "binding_name": "#new_offers",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "marketplace_error_button@common_buttons.dynamic_tooltip_notification_panel": {
          "size": [ "100%", "100%" ],
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.menu_store_error",
              "mapping_type": "pressed"
            },
            {
              "to_button_id": "button.is_hovered",
              "mapping_type": "pressed"
            }
          ],
          "consume_hover_events": false,
          "focus_enabled": true,
          "$dynamic_tooltip_button_visibility_binding_name": "#has_marketplace_errors",
          "$tooltip_popup_visible_binding": "#marketplace_errors_tooltip_visible",
          "$override_tooltip_popup_image": true,
          "$tooltip_popup_override_image_panel": "pause.store_error_image",
          "$tooltip_text_binding_name": "#marketplace_error_text",
          "$tool_tip_text_max_size": [ "300px", "default" ],
          "$tooltip_panel_content": "pause.store_error_content",
          "bindings": [
            {
              "binding_name": "#has_marketplace_errors",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "marketplace_error_icon@pause.marketplace_error_icon": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ -2, 0 ],
          "bindings": [
            {
              "binding_name": "#has_marketplace_errors",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "stacked_row": {
    "type": "panel",
    "size": [ "100%", 32 ]
  },
  
  "main_content_stack_panel": {
    "type": "stack_panel",
    "size": [ "100%", "100%" ],
    "orientation": "vertical",
    "controls": [
      {
        "skin_info_stack_panel@pause.skin_info_stack_panel": {
          "size": [ "100%", "fill" ]
        }
      },
      {
