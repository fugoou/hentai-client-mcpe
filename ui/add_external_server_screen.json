{
  "namespace": "add_external_server",

  "add_external_server_screen@common.base_screen": {
    "$screen_bg_content": "nik_x_background_data.X2"
  },

  "featured_servers": {
    "type": "label",
    "color": [1,1,1],
    "layer": 200,
    "text": "Add Server",
    "max_size": [ "100%", "100%" ],
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "offset": [ 0, 0 ],
    "font_type": "MinecraftTen",
    "shadow": true,
    "font_size": "small",
    "font_scale_factor": 5.4,
    "alpha": "@animations_fs.fs1_alpha_1"
  },

  "featured_servers_undertext": {
    "type": "label",
    "color": [1,1,1],
    "layer": 200,
  //  "text": "Thanks AmBro :)",
    "max_size": [ "100%", "100%" ],
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "offset": [ 0, 26 ],
    "font_type": "MinecraftTen",
    "shadow": true,
    "font_size": "small",
    "font_scale_factor": 3.0,
    "alpha": "@animations_fs.fs2_alpha_1"
  },

  "discord": {
    "type": "label",
    "color": [1,1,1],
    "layer": 200,
 //   "text": "YT : XyNCKunZ / IG : @xchillds.xyz",
    "max_size": [ "100%", "100%" ],
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "offset": [ 0, 43 ],
    "font_type": "MinecraftTen",
    "shadow": true,
    "font_size": "small",
    "font_scale_factor": 1.7,
    "alpha": "@animations_fs.fs3_alpha_1"
  },

  "featured_servers_panel": {
    "type": "panel",
    "controls": [
      {
        "featured_servers@add_external_server.featured_servers": {}
      },
      {
        "featured_servers_undertext@add_external_server.featured_servers_undertext": {}
      },
      {
        "discord@add_external_server.discord": {}
      }
    ]
  },

  "add_external_server_screen_content": {
    "type": "panel",
    "controls": [
      {
        "root_panel": {
          "type": "panel",
          "controls": [
            { "gamepad_helpers@add_external_server.gamepad_helpers": {} },
            { "main_panel@add_external_server.main_panel": { "layer": 1 } },
            {
              "featured_servers_panel@add_external_server.featured_servers_panel": {}
            }
          ]
        }
      }
    ]
  }
}